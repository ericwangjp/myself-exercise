<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:xlh="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_fuzzy_picture"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.my.mywebview.activity.FuzzyPictureActivity">
    <include
        android:id="@+id/title"
        layout="@layout/title_common" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/title"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="fitXY"/>
        <ImageView
            android:id="@+id/img2"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="fitXY" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <ImageView
                android:id="@+id/img_blur1"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="fitXY"/>
            <ImageView
                android:id="@+id/img_blur2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="fitXY" />
        </FrameLayout>
    </LinearLayout>
    <com.my.mywebview.view.RightAndWrongAnimView
        android:id="@+id/myView"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_centerInParent="true"
        xlh:paintColor="#f00"
        xlh:strokeWidth="10"
        />

</RelativeLayout>
