<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.my.mywebview.activity.dropdownbox.CustomSpinnerActivity">
    <include
        android:id="@+id/title"
        layout="@layout/title_common" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:layout_margin="@dimen/dimens20dp"
            android:padding="@dimen/dimens10dp"
            android:background="@drawable/selector_spinner"/>
        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:layout_margin="@dimen/dimens20dp"
            android:padding="@dimen/dimens10dp"
            android:overlapAnchor="false"
            android:background="@drawable/selector_spinner"/>
    </LinearLayout>
</LinearLayout>
