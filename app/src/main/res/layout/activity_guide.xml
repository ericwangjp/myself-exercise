<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.my.mywebview.activity.GuideActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v4.view.ViewPager>
        <Button
            android:id="@+id/btn_enter"
            android:layout_width="@dimen/dimens180dp"
            android:layout_height="@dimen/dimens50dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:text="点击进入"
            android:textSize="@dimen/dimens18sp"
            android:textColor="@color/colorFFFFFF"
            android:background="@drawable/bg_circle_enter_btn"
            android:layout_marginBottom="@dimen/dimens30dp"
            android:visibility="gone"/>
        <Button
            android:id="@+id/btn_jump"
            android:layout_width="@dimen/dimens50dp"
            android:layout_height="@dimen/dimens30dp"
            android:gravity="center"
            android:text="跳过"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dimens15dp"
            android:layout_marginRight="@dimen/dimens15dp"
            android:textSize="@dimen/dimens15sp"
            android:textColor="@color/colorFFFFFF"
            android:background="@drawable/bg_circle"
            />
    </RelativeLayout>
</LinearLayout>
